<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2C2C"
    android:paddingTop="?attr/actionBarSize"
    >

    <TextView
        android:id="@+id/Textview1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textAlignment="textEnd"
        android:paddingRight="10dp"
        android:background="@drawable/textfield"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:gravity="end"
        android:layout_gravity="end" />

    <TextView
        android:layout_width="420dp"
        android:layout_height="70dp"
        android:id="@+id/Textview2"
        android:textAlignment="textEnd"
        android:paddingRight="10dp"
        android:textSize="40sp"
        android:background="@drawable/textfield"
        android:layout_below="@+id/Textview1"
        android:textColor="#ffffff"
        android:gravity="end" />

    <Button
        android:layout_width="103dp"
        android:layout_height="79dp"
        android:text="AC"
        android:textSize="25sp"
        android:background="@drawable/button"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/Textview2"
        android:id="@+id/btnClear"
        />
    <Button
        android:layout_width="103dp"
        android:layout_height="79dp"
        android:text=""
        android:textSize="25sp"
        android:drawableStart="@drawable/ic_baseline_backspace_24"
        android:background="@drawable/button"
        android:layout_toRightOf="@+id/btnClear"
        android:drawableTint="#FF03DAC5"
        android:gravity="center_horizontal|top"
        android:paddingLeft="40dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/Textview2"
        android:id="@+id/btnBackspace"
        android:drawableLeft="@drawable/ic_baseline_backspace_24" />
    <Button
        android:layout_width="103dp"
        android:layout_height="79dp"
        android:text="%"
        android:textSize="35sp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/button"
        android:layout_toRightOf="@+id/btnBackspace"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/Textview2"
        android:id="@+id/btnPercent"
        />
    <Button
        android:layout_width="103dp"
        android:layout_height="79dp"
        android:text="/"
        android:textSize="35sp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/button"
        android:layout_toRightOf="@+id/btnPercent"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/Textview2"
        android:id="@+id/btnDivide"
        />

    <Button
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:text="9"
        android:textSize="25sp"
        android:layout_marginTop="2dp"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_below="@+id/btnClear"
        android:id="@+id/btn9"
        />
    <Button
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:text="8"
        android:layout_marginLeft="2dp"
        android:textSize="25sp"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn9"
        android:layout_below="@+id/btnBackspace"
        android:id="@+id/btn8"
        />
    <Button
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:text="7"
        android:textSize="25sp"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_toRightOf="@+id/btn8"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/btnPercent"
        android:id="@+id/btn7"
        />
    <Button
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:text="*"
        android:textSize="35sp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/button"
        android:layout_toRightOf="@+id/btn7"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/btnDivide"
        android:id="@+id/btnMultiply"
        />

    <Button
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:text="6"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/btn9"
        android:id="@+id/btn6"
        />
    <Button
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:text="5"
        android:layout_marginTop="2dp"
        android:textSize="25sp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_toRightOf="@+id/btn6"
        android:layout_below="@+id/btn8"
        android:id="@+id/btn5"
        />
    <Button
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:text="4"
        android:textSize="25sp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn5"
        android:layout_below="@+id/btn7"
        android:id="@+id/btn4"
        />
    <Button
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:text="-"
        android:textSize="35sp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/button"
        android:layout_toRightOf="@+id/btn4"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/btnMultiply"
        android:id="@+id/btnMinus"
        />

    <Button
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:text="3"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_marginTop="2dp"
        android:textSize="25sp"
        android:layout_below="@+id/btn5"
        android:id="@+id/btn3"
        />
    <Button
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:text="2"
        android:textSize="25sp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn3"
        android:layout_below="@+id/btn5"
        android:id="@+id/btn2"
        />
    <Button
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:text="1"
        android:textSize="25sp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn2"
        android:layout_below="@+id/btn4"
        android:id="@+id/btn1"
        />
    <Button
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:text="+"
        android:textSize="35sp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/button"
        android:layout_toRightOf="@+id/btn1"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/btnMinus"
        android:id="@+id/btnPlus"
        />

    <Button
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:text="0"
        android:textSize="25sp"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/btn3"
        android:id="@+id/btn0"
        />
    <Button
        android:layout_width="103dp"
        android:layout_height="80dp"
        android:text="."
        android:textSize="40sp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/button"
        android:textColor="#ffffff"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btn0"
        android:layout_below="@+id/btn2"
        android:id="@+id/btnDot"
        />
    <Button
        android:layout_width="206dp"
        android:layout_height="80dp"
        android:text="="
        android:textSize="40sp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/button"
        android:textColor="#FFC107"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/btnDot"
        android:layout_below="@+id/btn1"
        android:id="@+id/btnEqual"
        />


</RelativeLayout>